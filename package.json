{
  "name": "stravhat",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "dev": "npm run dev --workspace server & npm run dev --workspace web",
    "dev:server": "npm run dev --workspace server",
    "dev:web": "npm run dev --workspace web",
    "build": "npm run build --workspace server && npm run build --workspace web",
    "lint": "npm run lint --workspace server && npm run lint --workspace web",
    "railway:build:server": "bun run --filter=@stravhat/server build",
    "railway:start:server": "bun run --filter=@stravhat/server start",
    "railway:build:web": "bun run --filter=@stravhat/web build",
    "railway:start:web": "bun run --filter=@stravhat/web start",
    "railway:migrate": "bunx prisma migrate deploy --schema server/prisma/schema.prisma"
  }
}
